<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- .NET tool packaging -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>devhelper</ToolCommandName>
    <PackageId>DevHelper</PackageId>
    <Version>0.1.0</Version>
    <Authors>Markus Kaltenberger</Authors>
    <Description>Small local developer productivity tools (CLI).</Description>
    <PackageTags>cli;tools;developer;dotnet</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.1" />
    <PackageReference Include="System.Text.Json" Version="10.0.1" />
  </ItemGroup>

</Project>